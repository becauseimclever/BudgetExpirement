@page "/home"

<PageTitle>Home</PageTitle>

<FluentStack Orientation="Orientation.Vertical" VerticalGap="24">
    <FluentLabel Typo="Typography.PageTitle">Budget Experiment</FluentLabel>
    
    <FluentCard>
        <FluentStack Orientation="Orientation.Vertical" VerticalGap="16">
            <FluentLabel Typo="Typography.Body">
                Welcome to the Budget Experiment application. This is a clean architecture .NET 8 solution 
                built with Blazor WebAssembly and FluentUI components.
            </FluentLabel>
            
            <FluentButton Appearance="Appearance.Accent" OnClick="NavigateToDashboard">
                Go to Dashboard
            </FluentButton>
        </FluentStack>
    </FluentCard>
</FluentStack>

@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;

    private void NavigateToDashboard()
    {
        Navigation.NavigateTo("/dashboard");
    }
}
