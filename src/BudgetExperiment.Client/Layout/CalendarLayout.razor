@inherits LayoutComponentBase

<main class="calendar-layout">
    @Body
</main>

<style>
    .calendar-layout {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
        overflow: hidden;
    }

    /* Reset any global styles that might interfere */
    * {
        box-sizing: border-box;
    }
</style>
