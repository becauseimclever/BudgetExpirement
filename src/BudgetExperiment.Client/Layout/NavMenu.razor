@using Microsoft.FluentUI.AspNetCore.Components

<FluentNavMenu Style="@GetNavMenuStyle()">
    <FluentNavLink Href="/" Match="NavLinkMatch.All" Style="@GetNavLinkStyle()">
        <FluentIcon Value="@(new Icons.Regular.Size20.Calendar())" Style="margin-right: 8px;" />
        Budget Calendar
    </FluentNavLink>
    <FluentNavLink Href="/fast-entry" Style="@GetNavLinkStyle()">
        <FluentIcon Value="@(new Icons.Regular.Size20.MoneyHand())" Style="margin-right: 8px;" />
        Fast Entry
    </FluentNavLink>
</FluentNavMenu>

@code {
    [Parameter] public bool IsCollapsed { get; set; } = false;

    private string GetNavMenuStyle()
    {
        return IsCollapsed ? "padding: 8px 4px;" : "padding: 16px;";
    }

    private string GetNavLinkStyle()
    {
        if (IsCollapsed)
        {
            return "justify-content: center; padding: 12px 8px; min-height: 44px; display: flex; align-items: center;";
        }
        return "padding: 12px 16px; min-height: 44px; display: flex; align-items: center;";
    }
}
